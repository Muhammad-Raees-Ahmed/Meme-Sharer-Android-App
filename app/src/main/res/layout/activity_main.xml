<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/f5af38611cd1bda1f68876a13bb6436e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DashBoard"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="@color/black">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_meme"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="2dp"
        app:cardCornerRadius="6dp"
        android:layout_alignParentLeft="true"
        android:onClick="meme_handler"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/meme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="TopMeme"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_pictures"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:onClick="picture_handler">
        <LinearLayout
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="NewMeme"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_quotes"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cd_meme"
        android:onClick="quotes_handler">
        <LinearLayout
            android:id="@+id/quotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/q" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="ProMeme"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_about_us"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cd_pictures"
        android:onClick="about_us_handler">
        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/ab" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="About Us"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_feed_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="134dp"
        android:backgroundTint="@color/black"
        android:onClick="feed_btn"
        android:text="FeedBack"
        android:textSize="28sp" />

</RelativeLayout>
